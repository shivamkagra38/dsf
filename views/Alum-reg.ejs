<%- include("partials/header"); -%>

<section class="shadow">
    <img class ="pagehead" src="images/headers/Update.png" alt="">
</section>

<section>
    <div class="content container p-4 my-3 mx-auto">
        <!-- <div class="text-center pb-4">
          <h3 class="headings py-3">Update Your Information</h3>
        </div> -->
        <div class="content-text text-center mx-3">
          <p>
            Reconnect to your roots and grow even beyond, become a part of our family and guide younger one's towards their success!
            while traversing on your own ladder towards your reign! Update your info so we can get connected. 
          </p>
        </div>
    </div>
</section>
<section>
    <form method="POST" action="/register" class="my-5" style="width: 500px; margin: auto;">
        <div class="form-group">
            <label for="name">Name</label>
            <input required class="form-control" id="name" name="name" placeholder="Enter Your Name">
        </div>
        <div class="row">
            <div class="form-group col-6">
                <label for="email">Email</label>
                <input required class="form-control" id="email" type="email" name="email" placeholder="Enter Your Email">
            </div>
            <div class="form-group col-6">
                <label for="Contact">Contact</label>
                <input required class="form-control" id="contact" name="contact" placeholder="Enter Your Contact Number">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6">
                <label for="course" class="col-form-label">Course</label>
                <select name="course" class="form-control" id="course">
                    <option value="BE">BE</option>
                    <option value="ME">ME</option>
                </select>
            </div>
            <div class="form-group col-6">
                <label for="branch" class="col-form-label">Branch</label>
                <select name="branch" id="branch" class="form-control">
                    <option value="EEE">EEE</option>
                    <option value="ECE">ECE</option>
                    <option value="CSE">CSE</option>
                    <option value="IT">IT</option>
                    <option value="MECH">MECH</option>
                    <option value="BIO">BIO</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="city" id="city" class="col-3 col-form-label">Current City</label>
            <div class="col-9 ml-0">
                <input required type="text" name="current_city" class="form-control" id="city">
            </div>
        </div>
            
        <div class="row">
            <div class="form-group col-6">
                <label for="Organisation" class="col-form-label">Organisation</label>
                <input required class="form-control" name="organisation" id="Organisation">
            </div>
            <div class="form-group col-6">
                <label for="Designation" class="col-form-label">Designation</label>
                <input required class="form-control" id="Designation" name="designation">
            </div>
        </div>
        <label for="higher" class="h6 mb-0">Competetive Exams  <span style="font-weight: 400; color: black;"><i>(if applicable)</i></span></label>
        <div id="exams" class="row" >
            <div class="from-group col-6 ">
                <label for="exam" class="col-form-label pt-1">Exams Cleared</label>
                <input class="form-control" name="exams_cleared" id="exam">
            </div>
    
            <div class="from-group col-6 ">
                <label for="year" class="col-form-label pt-1">year</label>
                <input class="form-control" name="year_cleared_exam" id="year">
            </div>
        </div>
        <label for="higher" class="h6 mb-0 mt-3">Higher Studies  <span style="font-weight: 400; color: black;"><i>(if applicable)</i></span></label>
        <div id="higher" class="row" >
            <div class="from-group col-4 ">
                <label for="course" class="col-form-label pt-1">Course</label>
                <input class="form-control" id="course" name="higher_course">
            </div>
    
            <div class="from-group col-4 ">
                <label for="institution" class="col-form-label pt-1">Institution</label>
                <input class="form-control" id="institution" name="higher_institution">
            </div>
    
            <div class="from-group col-4">
                <label for="year" class="col-form-label pt-1">Year</label>
                <input class="form-control" id="year" name="higher_year">
            </div>
        </div>

        <!-- <div class="form-group">
            <label for="linkedin" class="h6 mb-0 mt-3">Your LinkedIn Profile</label>
            <input class="form-control mt-1" id="linkedin" name="linkedin" placeholder="Enter Your profile link">
        </div> -->

        <label for="buddies" class="h6 mb-1 mt-3">Mention Your College batchmates</label>
        <div id="buddies" class="row" >
            <div class="col-6" >
                <label for="colleague-one" class="col-form-label pt-1 pb-0" style="padding-left: 0; font-weight: 600;">Batchmate One</label>
                <div class="from-group" id="colleague-one">
                    <label for="colleague-one-name" class="col-form-label pt-1">Name</label>
                    <input class="form-control" id="colleague-one-name" name="batchmate_one_name">

                    <label for="colleague-one-number" class="col-form-label pt-1">Contact Number</label>
                    <input class="form-control" id="colleague-one-number" name="batchmate_one_number">

                    <label for="colleague-one-org" class="col-form-label pt-1">Current Organisation</label>
                    <input class="form-control" id="colleague-one-org" name="batchmate_one_org">
                </div>
            </div>
            <div class="col-6" >
                <label for="colleague-two" class="col-form-label pt-1 pb-0" style="padding-left: 0; font-weight: 600;">Batchmate Two</label>
                <div class="from-group" id="colleague-two"> 
                    <label for="colleague-two-name" class="col-form-label pt-1">Name</label>
                    <input class="form-control" id="colleague-two-name" name="batchmate_two_name">

                    <label for="colleague-two-number" class="col-form-label pt-1">Contact Number</label>
                    <input class="form-control" id="colleague-two-number" name="batchmate_two_number">

                    <label for="colleague-two-org" class="col-form-label pt-1">Current Organisation</label>
                    <input class="form-control" id="colleague-two-org" name="batchmate_two_org">
                </div>
            </div>
        </div>

        <div class="form-group pt-4 col-6 mx-auto">
            <input required type="submit" class="form-control submit-btn">
        </div>
    </div>
    
    </form>
</section>
 

<%- include("partials/footer"); -%>